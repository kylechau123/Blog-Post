<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="content">Comment:</label>
        <textarea class="form-input" id="content" name="content"></textarea>
      </div>
      <div class="form-group">
        <input type="hidden" class="form-input" id="blog_id" name="blog_id" value={{ id }}></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.content}}</h4>
         <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src = '/js/comment.js'></script>